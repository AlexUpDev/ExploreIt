<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/navbar.css">
<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title">Администрирование</h4>
                <h5 class="card-title">Пользователи</h5>
                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Имя</th>
                        <th scope="col">Профиль</th>
                        <th scope="col">Email</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                        <% for (let user of users){%>
                            <tr>
                                <td><%= user.username%></td>
                                <td><%= user.type%></td>
                                <td><%= user.email%></td>
                                <td>
                                    <a class="btn btn-primary" href="#">Редактировать</a>
                                </td>
                            </tr>
                        <% }%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    const users = { features: <%- JSON.stringify(users) %> }
</script>